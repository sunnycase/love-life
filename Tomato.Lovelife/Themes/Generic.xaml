<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tomato.Lovelife"
    xmlns:activitiesView="using:Tomato.Lovelife.Views.Activities">

    <Style TargetType="activitiesView:ActivityCalculatorPresenter">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="activitiesView:ActivityCalculatorPresenter">
                    <Border x:Name="PART_ContentHost"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
